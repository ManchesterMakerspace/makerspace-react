FROM ruby:2.3

RUN apt-get update -qq && apt-get install -y build-essential libpq-dev nodejs curl
RUN curl -sL https://deb.nodesource.com/setup_8.x  | bash -
RUN apt-get install -y nodejs

ENV app /myapp
RUN mkdir $app
RUN mkdir $app/tmp
WORKDIR $app

COPY Gemfile* $app/
COPY package* $app/

ENV BUNDLE_GEMFILE=$app/Gemfile \
  BUNDLE_JOBS=2 \
  BUNDLE_PATH=/box

RUN npm install -g protractor
RUN npm install
RUN cp $app/node_modules/phantomjs-prebuilt/lib/phantom/bin/phantomjs /usr/bin/phantomjs

COPY . $app

COPY Docker/scripts/integration_test.sh /bin/integration_test.sh
RUN chmod +x /bin/integration_test.sh

CMD ["/bin/integration_test.sh"]
