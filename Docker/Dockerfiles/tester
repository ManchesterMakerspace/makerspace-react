FROM ruby:2.3

# Install base packages
RUN curl -sL https://deb.nodesource.com/setup_8.x  | bash -
RUN apt-get update -qq && apt-get install -y build-essential libpq-dev nodejs curl  default-jre

# Fetch yarn and install
RUN npm install -g yarn

ENV app /usr/src/app
WORKDIR $app

ENV BUNDLE_GEMFILE=$app/Gemfile \
  BUNDLE_JOBS=2 \
  BUNDLE_PATH=/box

RUN yarn install
COPY Docker/scripts/wait_to_test.sh /bin/wait_to_test.sh
RUN chmod +x /bin/wait_to_test.sh

CMD ["/bin/wait_to_test.sh"]